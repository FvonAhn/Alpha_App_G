@model WebApp.Models.CreateProjectViewModel



<div class="modal-top">
    <h3>Create Project</h3>
    <div class="close-window" onclick="createProjectClose()">X</div>
</div>
<div class="modal-picture-wrapper">
    <div class="modal-picture">
        <img src="~/images/ProjectImage1.svg" />
    </div>
</div>
<form asp-action="CreateProject" method="post" enctype="multipart/form-data" class="modal-form" id="create-project">
    <div class="modal-form-wrapper">
        <label asp-for="ProjectName">Project Name</label>
        <input asp-for="ProjectName" class="form-control" placeholder="Project Name" />
        <span asp-validation-for="ProjectName" class="alert-form"></span>
    </div>
    <div class="modal-form-wrapper">
        <label asp-for="ClientName">Client Name</label>
        <input asp-for="ClientName" class="form-control" placeholder="Client Name" />
        <span asp-validation-for="ClientName" class="alert-form"></span>
    </div>
    <div class="modal-form-wrapper">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" id="Description" placeholder="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="modal-form-date">
        <div class="modal-form-dates">
            <label asp-for="StartDate">Start date</label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>
        <div class="modal-form-dates">
            <label asp-for="EndDate">End date</label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>
    </div>
    <div class="modal-form-budget">
        <label asp-for="Budget" class="budget">Budget</label>
        <div class="form-control">
            <span class="currency">€</span>
            <input asp-for="Budget" type="number" min="0" step="0.01" class="modal-form-budget-input" />
        </div>
    </div>
    <button type="button" onclick="submitCreateProject()" class="btn">Create</button>
</form>


