<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous">
    <link rel="stylesheet" href="css/site.css" asp-append-version="true">
    <title>@ViewData["Title"]Alpha Web App</title>
    <script type="importmap"></script>
</head>
<body>

    <div class="background-home">
        <sidebar class="side">
            <div class="alpha-logo">
                <img src="images/Alphalogo.svg" alt="Alpha Logotype">
                <div class="alpha-text">alpha</div>
            </div>
            <div class="buttons-side">
                <div class="btn-side">
                    <i class="fa-solid fa-briefcase"></i>
                    <div>Projects</div>
                </div>
                <div class="btn-side">
                    <i class="fa-solid fa-user-group"></i>
                    <div class="text-btn-side">Team Members</div>
                </div>
            </div>
        </sidebar>

        <div class="container-home">

            <div class="header-home">
                <form class="search">
                    <input class="search-field" type="text" name="query" placeholder="Enter search.." />
                </form>
                <div class="notification-bell">
                    <span class="notification">1<i class="fa-regular fa-bell"></i></span>
                </div>

                <div class="drop-menu">
                    <i class="fa-solid fa-gear"></i>
                </div>

                <div class="divider"></div>

                <div class="avatar-container" style="position: relative;">
                    <div class="avatar" onclick="toggleDropdownUser()" data-bs-toggle="tooltip" data-bs-placement="bottom" title="@(User?.Identity?.Name ?? "Guest")">
                        <img src="@(@User.FindFirst("AvatarUrl")?.Value ?? "/images/Avatar1.svg")" alt="User Avatar" class="avatar-img">
                    </div>
                </div>

                <!-- Dropdown -->
                <div id="dropdown-user" class="dropdown-user">
                    <div class="dropdown-user-info">
                        <div class="avatar">
                            <img src="@(@User.FindFirst("AvatarUrl")?.Value ?? "/images/Avatar1.svg")" alt="User Avatar" class="avatar-img">
                        </div>
                        <h7>@(User?.Identity?.Name ?? "Guest")</h7>
                    </div>
                    <div class="dropdown-logout" onclick="logout()">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <h7>Logout</h7>
                    </div>
                </div>

            </div>

            <section class="main">
                @RenderBody()
            </section>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>