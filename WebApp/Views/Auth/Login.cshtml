@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="background-login"></div>
<div class="container login">
    <h1 class="header-login">@ViewData["Title"]</h1>
    <form asp-controller="Auth" asp-action="Lgoin" method="post" class="form-group login-form">
        <div class="form-group-email">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="@Html.DisplayFor(m => m.Email)">
            <span asp-validation-for="Email" class="error-message"></span>
        </div>
        <div class="form-group-password">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" placeholder="@Html.DisplayFor(m => m.Password)">
            <span asp-validation-for="Password" class="error-message"></span>
        </div>
        <div class="form-check-label">
            <input asp-for="RememberMe" class="form-check-input">
            <label asp-for="RememberMe"></label>
        </div>
        <button type="submit" class="btn custom">Log In</button>
    </form>
    <div class="text-link">
        <p>Don't have an account? <a asp-action="Register">Sign Up</a></p>
    </div>
</div>